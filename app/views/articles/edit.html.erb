<center>
<section class="article-card card">
  <h1>Update Article</h1>
  <div class="card-body">
    <%= form_with method: :patch, url: "/articles/#{@article.id}", local: true do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title, placeholder: "Enter Article Title" %>
      <%= f.label :body %>
      <%= f.text_field :body, placeholder: "Enter the article body text" %>
      <%= f.submit "Update Article" %>
    <% end %>
  </div>
</section>
</center>
